    http://www.springframework.org/schema/cache
    http://www.springframework.org/schema/cache/spring-cache-4.1.xsd">
	<!-- C3P0连接池 -->
     <bean id="dataSource"
	  class="com.mchange.v2.c3p0.ComboPooledDataSource">
		  <property name="driverClass"
		   value="com.mysql.jdbc.Driver">
		  </property>
		  <property name="jdbcUrl"
		   value="jdbc:mysql://localhost:3306/ranblog">
		  </property>
		  <property name="user" value="root"></property>
		  <property name="password" value="123"></property>
		  <property name="minPoolSize"><value>1</value></property>
		  <property name="maxPoolSize"><value>100</value></property>
		  <property name="maxIdleTime"><value>1800</value></property>
		  <property name="acquireIncrement"><value>2</value></property>
		  <property name="maxStatements"><value>0</value></property>
		  <property name="initialPoolSize"><value>2</value></property>
		  <property name="idleConnectionTestPeriod"><value>1800</value></property>
		  <property name="acquireRetryAttempts"><value>30</value></property>
		  <property name="breakAfterAcquireFailure"><value>true</value></property>
		  <property name="testConnectionOnCheckout"><value>false</value></property>
	 </bean>
	<!-- Hibernate工厂 -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
			</props>
		</property>
			<property name="mappingResources">
			<list>
			    <value>com/fhr/ranblog/models/Blog.hbm.xml</value>
				<value>com/fhr/ranblog/models/BlogComment.hbm.xml</value>
				<value>com/fhr/ranblog/models/BlogRole.hbm.xml</value>
				<value>com/fhr/ranblog/models/Script.hbm.xml</value>
				<value>com/fhr/ranblog/models/LanguageType.hbm.xml</value>
				<value>com/fhr/ranblog/models/Authority.hbm.xml</value>
				<value>com/fhr/ranblog/models/BlogType.hbm.xml</value>
				<value>com/fhr/ranblog/models/BlogUser.hbm.xml</value>
			</list>
		</property>
	</bean>
	  <!-- 启用Spring注解 -->
    <context:annotation-config />
    <!-- 扫描注解 将Bean进行注册 -->
     <!-- 根容器中最好只包含服务、仓库和其它业务逻辑，所以在此把Controller过滤掉 -->
    <context:component-scan base-package="com.fhr.ranblog">
   	 <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
